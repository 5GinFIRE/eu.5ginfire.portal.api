version: '3.4'
services:
  nginx:
    container_name: anginx
    image: nginx
    restart: always
    ports:
    - 80:80
    - 443:443
    volumes:
    - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    - ./nginx/certificates:/etc/nginx/certificates
    - ./nginx/eu.5ginfire.portal.web/src:/webstatic/portal
    - ./nginx/eu.5ginfire.healthcheck.web/build:/webstatic/hcs
    networks:
    - front
  
  mysql-portal:
    container_name: amysql
    image: mysql:5.7
    environment:
      MYSQL_ROOT_PASSWORD: letmein
      MYSQL_DATABASE: portaldb
      MYSQL_USER: portaluser
      MYSQL_PASSWORD: 12345
      MYSQL_ROOT_HOST: "%"
    ports:
    -  "3306:3306"
    volumes:
    -  ./mysql/data:/var/lib/mysql
    restart: always
    networks:
    -  back

  jetty:
    container_name: ajetty
    image: jetty
    ports:
    - "8080:8080" 
    volumes:
    - ./jetty/webapps:/var/lib/jetty/webapps
    - ./jetty/wars/:/var/lib/jetty/wars/
    - ./jetty/etc/:/var/lib/jetty/etc/
    - ./jetty/resources/:/var/lib/jetty/resources/
    - ./jetty/lib/ext/:/var/lib/jetty/lib/ext/
    - ./jetty/home/jetty/:/home/jetty/
    - /hd2:/hd2
    networks:
    - front
    - back
    depends_on:
    -  mysql-portal
 
networks:
  front:
  back:
